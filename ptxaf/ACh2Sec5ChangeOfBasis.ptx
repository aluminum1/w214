</latex-image>
        </image>

        \end{aligned} \begin{aligned}

        <image>

<latex-image>
          <![CDATA[\begin{tikzpicture}[scale=0.5] 
    \draw (0,0) rectangle (1,3); 
    \node at (0.5, 1.5) {$\mat{C}_2$};\end{tikzpicture}]]>
</latex-image>
        </image>

        \end{aligned} \cdots \begin{aligned}

        <image>

<latex-image>
          <![CDATA[\begin{tikzpicture}[scale=0.5] 
    \draw (0,0) rectangle (1,3);
    \node at (0.5, 1.5) {$\mat{C}_m$};\end{tikzpicture}]]>
</latex-image>
        </image>

        \end{aligned} \right] \left[
        \begin{array}{c}
        a_1 \\
        a_2 \\
        \vdots \\
        a_m
        \end{array}
        \right] = a_1  \begin{aligned}

        <image>

<latex-image>
          <![CDATA[\begin{tikzpicture}[scale=0.5] 
    \draw (0,0) rectangle (1,3); 
    \node at (0.5, 1.5) {$\mat{C}_1$};\end{tikzpicture}]]>
</latex-image>
        </image>

        \end{aligned} + a_2  \begin{aligned}

        <image>

<latex-image>
          <![CDATA[\begin{tikzpicture}[scale=0.5]
    \draw (0,0) rectangle (1,3);
    \node at (0.5, 1.5) {$\mat{C}_2$};\end{tikzpicture}]]>
</latex-image>
        </image>

        \end{aligned} + \cdots + a_n \begin{aligned}

        <image>

<latex-image>
          <![CDATA[\begin{tikzpicture}[scale=0.5]
    \draw (0,0) rectangle (1,3);
